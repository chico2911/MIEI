<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".view.Menu">

    <ImageView
        android:id="@+id/Topo"
        android:layout_width="0dp"
        android:layout_height="65dp"
        android:layout_marginBottom="464dp"
        android:contentDescription="@string/topo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@color/colorRetangulos" />

    <TextView
        android:id="@+id/braga"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="2dp"
        android:textAlignment="center"
        android:background="@color/trans"
        android:text="@string/Braga"
        android:textColor="@color/colorTextBox"
        android:textSize="40dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Topo" />

    <Button
        android:id="@+id/earth"
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/icon_earth"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/settings"
        android:layout_width="35sp"
        android:layout_height="35sp"
        android:layout_marginTop="14dp"
        android:layout_marginEnd="28dp"
        android:background="@drawable/icon_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hotel"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ic_icon_hotel"
        android:backgroundTint="@color/buttonUnPressed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/addExcursion"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ic_icon_restaurante"
        android:backgroundTint="@color/buttonUnPressed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/wallet"
        app:layout_constraintStart_toEndOf="@+id/hotel" />

    <Button
        android:id="@+id/wallet"
        android:layout_width="40sp"
        android:layout_height="40sp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ic_icon_ponto"
        android:backgroundTint="@color/buttonUnPressed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/mapa" />

    <Button
        android:id="@+id/mapa"
        android:layout_width="30sp"
        android:layout_height="40sp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/ic_icon_guia"
        android:backgroundTint="@color/buttonUnPressed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/menuguide"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/ic_add_circle_black_24dp"
        android:backgroundTint="@color/colorButtons"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="@+id/listView"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="invisible"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="412dp"
        android:layout_height="0dp"
        android:layout_marginBottom="10dp"
        android:background="@color/trans"
        android:cacheColorHint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/hotel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Topo"
        app:layout_constraintVertical_bias="1.0">

    </ListView>


</androidx.constraintlayout.widget.ConstraintLayout>