<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.Language"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <TextView
        android:id="@+id/espanol"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/trans"
        android:text="Español"
        android:textAlignment="center"
        android:textColor="@color/settings"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/english" />

    <Button
        android:id="@+id/back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/seta"
        android:backgroundTint="@color/colorSeta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="72dp"
        android:background="@color/trans"
        android:text="@string/language"
        android:textAlignment="center"
        android:textColor="@color/settings"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tuga"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="40dp"
        android:background="@color/trans"
        android:text="Português"
        android:textAlignment="center"
        android:textColor="@color/settings"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/comment" />

    <TextView
        android:id="@+id/german"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/trans"
        android:text="Deutsch"
        android:textAlignment="center"
        android:textColor="@color/settings"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tuga" />

    <TextView
        android:id="@+id/english"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/trans"
        android:text="English"
        android:textAlignment="center"
        android:textColor="@color/settings"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/french" />

    <TextView
        android:id="@+id/french"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:background="@color/trans"
        android:text="Français"
        android:textAlignment="center"
        android:textColor="@color/settings"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/german" />

</androidx.constraintlayout.widget.ConstraintLayout>