extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h3 Lista de Processos
        if lista.length > 0
            .w3-container
                table(class="w3-table-all")
                    tr
                        th ID Processo
                        th CPU 
                        th RAM
                        th Last Timestamp
                    each a in lista
                        tr
                            td 
                                a(href="/processos/"+host+"/"+a.id)= a.id
                            td= a.CPU[a.CPU.length-1]
                            td= a.RAM[a.RAM.length-1]
                            td= a.TIMESTAMP    
        else
            div(class="w3-container")
                p Ainda não há Processos.
    footer(class="w3-container w3-teal")
      adress Gerado por SNMP-Monitor
      br
      a(href="/") Voltar    