extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h3 CLAV 
            h5 Plataforma da Direção-Geral do Livro
        if tipologias.length > 0
            .w3-container
                table(class="w3-table-all")
                    tr
                        th ID
                        th Sigla
                        th Designação
                        th Estado
                    each tip in tipologias
                        tr
                            td 
                                a(href="/tipologia/"+tip.id)= tip.id
                            td= tip.sigla
                            td= tip.designacao
                            td= tip.estado   
        else
            div(class="w3-container")
                p Ainda não há Tipologias.
            footer(class="w3-container w3-teal")
                adress A85367